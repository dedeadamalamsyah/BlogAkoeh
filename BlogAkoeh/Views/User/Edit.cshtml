@model User
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h3>Edit User</h3>
            </div>

            <div class="card-body">
                <form method="post" action="Edit">
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="mb-3">
                        <label>Username</label>
                        <input type="text" name="Username" class="form-control" value="@Model.Username" />
                    </div>
                    <div class="mb-3">
                        <label>Password</label>
                        <input type="text" name="Password" class="form-control" value="@Model.Password"/>
                    </div>
                    <div class="mb-3">
                        <label>Fullname</label>
                        <input type="text" name="Fullname" class="form-control" value="@Model.Fullname"/>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>