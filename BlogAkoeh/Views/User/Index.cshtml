@model List<User>

@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>List User</h3>
            </div>

            <div class="card-body">
                <a href="/user/create" class="btn btn-success">Add User</a>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Fullname</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var user in Model)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.Fullname</td>
                                <td>
                                    <a href="/user/edit/@user.Id" class="btn btn-warning">Edit</a>
                                    <a href="/user/delete/@user.Id" class="btn btn-warning">Delete</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>