@model List<User>

@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>List Users</h3>
            </div>

            <div class="card-body">
                <a href="/User/Create" class="btn btn-success">Add User</a>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Fullname</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach(var user in Model)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.Fullname</td>
                                <td>@user.Role.Name</td>

                                <td>
                                    <a href="/User/Detail/@user.Id" class="btn btn-primary">Detail</a>
                                    <a href="/User/Edit/@user.Id" class="btn btn-warning">Edit</a>
                                    <a href="/User/Delete/@user.Id" class="btn btn-danger">Delete</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>